	bool "IPQ6018 JDCloud ER1 Board Support"
	default n
	help
		Enable support for IPQ6018_JDCLOUD_ER1 board

config IPQ6018_XIAOMI_AX1800
	bool "IPQ6018 Xiaomi AX1800 Board Support"
	select 256MB_RAM
